@model IEnumerable<Models.Product>

@{
    ViewData["Title"] = "المنتجات";
    Layout = "~/Views/_LayoutDashbord.cshtml";

}

<h2>المنتجات</h2>
<a asp-action="Create" class="btn btn-primary mb-3">إضافة منتج</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>الصورة</th>
            <th>الاسم</th>
            <th>الوصف</th>
            <th>المخزون</th>
            <th>السعر</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="@product.ImageUrl" alt="@product.Name" width="50" height="50" />
                </td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Stock</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm">عرض</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">تعديل</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('هل أنت متأكد؟');">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
