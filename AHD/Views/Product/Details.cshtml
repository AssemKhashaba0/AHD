@model Models.Product

@{
    ViewData["Title"] = "تفاصيل المنتج";
    Layout = "~/Views/_LayoutDashbord.cshtml";

}

<div class="card shadow-lg p-4 mb-5 bg-white rounded">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2 class="text-primary">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-success">السعر: $@Model.Price</h4>
            <h5 class="text-warning">المخزون: @Model.Stock</h5>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
                <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
            </div>
        </div>
    </div>
</div>
