@model Models.Mosque

@{
    ViewData["Title"] = "حذف المسجد";
    Layout = "~/Views/_LayoutDashbord.cshtml";

}

<h1>حذف المسجد</h1>

<h3>هل أنت متأكد من رغبتك في حذف هذا المسجد؟</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">الاسم</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">العنوان</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">خط العرض</dt>
        <dd class="col-sm-10">@Model.Latitude</dd>

        <dt class="col-sm-2">خط الطول</dt>
        <dd class="col-sm-10">@Model.Longitude</dd>

        <dt class="col-sm-2">المدينة</dt>
        <dd class="col-sm-10">@Model.City?.Name</dd>

    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
    </form>
</div>
