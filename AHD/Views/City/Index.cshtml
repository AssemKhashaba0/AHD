@using Models
@model IEnumerable<City>
@{
    Layout = "~/Views/_LayoutDashbord.cshtml";

}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-city"></i> قائمة المدن</h3>
        </div>
        <div class="card-body">
            <div class="mb-3 text-end">
                <a href="@Url.Action("Create")" class="btn btn-success"><i class="fas fa-plus"></i> إضافة مدينة جديدة</a>
            </div>
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-tag"></i> الاسم</th>
                        <th><i class="fas fa-cogs"></i> الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model)
                    {
                        <tr>
                            <td>@city.Name</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = city.Id })" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> تعديل</a>
                                <a href="@Url.Action("Delete", new { id = city.Id })" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
