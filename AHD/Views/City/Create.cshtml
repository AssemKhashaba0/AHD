@using Models
@model City
@{
    Layout = "~/Views/_LayoutDashbord.cshtml";

}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-city"></i> إضافة مدينة جديدة</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label"><i class="fas fa-tag"></i> الاسم</label>
                    <input asp-for="Name" class="form-control" placeholder="أدخل اسم المدينة" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> حفظ</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> إلغاء</a>
                </div>
            </form>
        </div>
    </div>
</div>

